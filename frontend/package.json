{
  "name": "smart-expense-frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "lint:ci": "next lint --max-warnings 0",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:unit": "jest",
    "test:unit:watch": "jest --watch",
    "test:unit:ci": "jest --ci --coverage --watchAll=false",
    "test:integration": "jest --config jest.integration.config.js",
    "test:integration:ci": "jest --config jest.integration.config.js --ci --watchAll=false",
    "test:e2e": "playwright test",
    "test:e2e:ci": "playwright test --reporter=html",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:ai-assistant": "node scripts/test-ai-assistant.js",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:test": "DATABASE_URL=$DATABASE_URL_TEST prisma migrate deploy",
    "db:reset": "prisma migrate reset",
    "db:studio": "prisma studio"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@hookform/resolvers": "3.10.0",
    "@prisma/client": "5.22.0",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-checkbox": "^1.3.2",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-radio-group": "^1.3.7",
    "@radix-ui/react-scroll-area": "^1.2.9",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-switch": "^1.2.5",
    "@radix-ui/react-tabs": "^1.1.12",
    "@radix-ui/react-toast": "^1.2.14",
    "bcryptjs": "2.4.3",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "gocardless-nodejs": "4.1.0",
    "jsonwebtoken": "9.0.2",
    "jspdf": "^3.0.1",
    "jspdf-autotable": "^5.0.2",
    "lucide-react": "0.462.0",
    "next": "^14.2.30",
    "next-themes": "^0.4.6",
    "node-cron": "3.0.3",
    "papaparse": "^5.5.3",
    "prisma": "5.22.0",
    "react": "^18.3.1",
    "react-day-picker": "^9.8.0",
    "react-dom": "^18.3.1",
    "react-hook-form": "7.54.0",
    "recharts": "^3.1.0",
    "tailwind-merge": "2.5.4",
    "tailwindcss": "3.4.16",
    "typescript": "^5.6.3",
    "winston": "3.17.0",
    "xlsx": "^0.18.5",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "@jest/types": "^30.0.5",
    "@playwright/test": "1.49.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/bcryptjs": "2.4.6",
    "@types/jsonwebtoken": "9.0.7",
    "@types/node": "20.17.9",
    "@types/node-cron": "3.0.11",
    "@types/papaparse": "^5.3.16",
    "@types/react": "18.3.17",
    "@types/react-dom": "18.3.5",
    "@typescript-eslint/eslint-plugin": "6.21.0",
    "@typescript-eslint/parser": "6.21.0",
    "@vitejs/plugin-react": "4.3.4",
    "@vitest/coverage-v8": "^1.6.0",
    "autoprefixer": "10.4.20",
    "eslint": "8.57.1",
    "eslint-config-next": "14.2.30",
    "husky": "8.0.3",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "jsdom": "^26.1.0",
    "lint-staged": "13.3.0",
    "openai": "^5.10.2",
    "postcss": "8.4.49",
    "prettier": "3.4.2",
    "vitest": "1.6.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
